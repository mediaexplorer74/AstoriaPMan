<Page x:ConnectionId='1'
    x:Class="Astoria_Package_Manager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Astoria_Package_Manager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#FF303030"
                        >

    <Grid>
        <RelativePanel>

            <Pivot x:ConnectionId='2' x:Name="APIPivot" Title="Astoria Package Manager"                                             >

                <PivotItem Header="Installer" Margin="5,0,5,0">

                    <RelativePanel 
                        Grid.Column="0">
                        <ProgressBar 
            Width="Auto"
            Height="5"
            RelativePanel.AlignTopWith="GridExtractor"
            RelativePanel.AlignLeftWithPanel="True"
            HorizontalAlignment="Stretch"
            RelativePanel.AlignRightWithPanel="True" Background="#FF2D9FC9" Margin="0,0,0,22" 
            
            />
                        <Grid x:ConnectionId='33' 
                            Grid.Column="0" 
                            x:Name="GridExtractor" 
                            RelativePanel.AlignLeftWithPanel="True" 
                            RelativePanel.AlignRightWithPanel="True" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" Margin="0,0,0,0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition 
                                    Width="Auto">
                                </ColumnDefinition>
                                <ColumnDefinition 
                                    Width="*">
                                </ColumnDefinition>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition 
                                    Height="Auto" ></RowDefinition>
                                <RowDefinition 
                                    Height="Auto"></RowDefinition>
                                <RowDefinition 
                                    Height="Auto"></RowDefinition>
                                <RowDefinition 
                                    Height="*" ></RowDefinition>
                                <RowDefinition
                                    Height="*"></RowDefinition>
                                <RowDefinition 
                                    Height="*" ></RowDefinition>
                                <RowDefinition 
                                    Height="*"></RowDefinition>

                            </Grid.RowDefinitions>

                            <TextBlock x:ConnectionId='40' 
                                x:Name="OpenArchiveHeader" 
                                TextWrapping="Wrap"
                                Grid.Column="0" 
                                Width="auto" 
                                MinWidth="200"
                                TextAlignment="Center" 
                                
                                Text="Load an Astoria Appx"
                                HorizontalAlignment="Stretch" 
                                Margin="5,5,5,5"
                                Padding="5,5,5,5"
                                Grid.ColumnSpan="2" FontSize="16" 
                                />

                            <Button x:ConnectionId='41' 
                                x:Name="OpenArchive" 
                                                         
                                Grid.Column="0"
                                Grid.Row="1"
                                Content="Open"
                                RelativePanel.AlignRightWithPanel="True"
                                Margin="5,5,5,5" 
                                Height="auto"
                                HorizontalAlignment="Stretch"
                                MaxWidth="100" Width="Auto"
                                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="#FF33B1DF" FontSize="16"/>
                            <RelativePanel Grid.Row="1" Grid.Column="1">
                                <Button x:ConnectionId='42' 
                            x:Name="ViewManifestBtn"
                                                         
                            Margin="15,5,5,5"
                                RelativePanel.AlignLeftWithPanel="True"
                            Grid.Column="1"
                            Grid.Row="1"
                            Content="View Manifest"
                            Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="#FF33B1DF" FontSize="16"
                            />
                                <Button x:ConnectionId='43' x:Name="AddOBBData"
                                    Content="Load Data Files"
                                    RelativePanel.AlignRightWithPanel="True"
                                                             
                                     Grid.Column="1"
                                     Grid.Row="1"
                                    Margin="5,5,5,5"
                                    Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="#FF33B1DF" FontSize="16"/>
                            </RelativePanel>
                        </Grid>
                        
                        <ProgressBar x:ConnectionId='34' 
                            x:Name="progressBar" 
                            RelativePanel.AlignLeftWithPanel="true"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.Below="GridExtractor"
                            
                            Height="15"
                            Margin="5,5,5,5" Background="#FF2D9FC9" Foreground="#FF2D9FC9"
                        
                            />
                        <ProgressRing x:ConnectionId='35' 
                            x:Name="ProgRing"
                            Width="72"
                            Height="72" 
                            
                            RelativePanel.AlignRightWithPanel="False" RenderTransformOrigin="0.505,0.536"
                            Margin="0,0,0,0"
                            />
                       
                        <ScrollViewer x:ConnectionId='36'
                            x:Name="textscroll"
                            
                            RelativePanel.RightOf="AppLogo"
                            RelativePanel.AlignTopWith="progressBar"
                            RelativePanel.AlignRightWithPanel="True" >
                            <TextBlock x:ConnectionId='39' 
                            x:Name="OutputBox" 
                            Grid.Column="0" 
                            RelativePanel.Below="progressBar" 
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignRightWithPanel="True" 
                            MinWidth="250" 
                            Margin="5,5,5,5"
                            HorizontalAlignment="Stretch"
                            TextWrapping="Wrap" 
                            VerticalAlignment="Stretch"
                            Width="auto" 
                            ScrollViewer.VerticalScrollMode="Enabled" 

                             />
                        </ScrollViewer>
                        <Image x:ConnectionId='37' x:Name="AppLogo"
                               RelativePanel.AlignLeftWithPanel="True"
                               RelativePanel.Below="progressBar"
                               Width="0"
                               Height="50"
                               Margin="12,30,12,5"/>

                        <TextBlock x:ConnectionId='38'
                            x:Name="PermText"
                            RelativePanel.Below="AppLogo"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignRightWithPanel="True"
                            Margin="5,30,5,5" TextWrapping="Wrap"
                            ScrollViewer.VerticalScrollMode="Enabled"/>
                    </RelativePanel>
                </PivotItem>
                <PivotItem x:ConnectionId='8' x:Name="repo" Header="Repo" >
                    <RelativePanel VerticalAlignment="Stretch"
                                   HorizontalAlignment="Stretch" Margin="0,0,0,0">
                        <ProgressBar 
            Width="Auto"
            Height="5"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            HorizontalAlignment="Stretch"
            RelativePanel.AlignRightWithPanel="True" Background="#FF2D9FC9" Margin="0,0,0,22" 
            
            />
                        <TextBlock x:ConnectionId='13' x:Name="OutputText"
                                   HorizontalAlignment="Stretch"
                                   RelativePanel.AlignRightWithPanel="True"
                                   RelativePanel.AlignLeftWithPanel="True"
                                   RelativePanel.AlignTopWithPanel="True"
                                   Text="Browse the ProjectA Repo"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   
                                   Height="40" Margin="0,10,0,0" FontSize="14"/>
                        <ProgressBar x:ConnectionId='14' x:Name="progressRepo"
                                     RelativePanel.AlignLeftWithPanel="True"
                                     RelativePanel.AlignRightWithPanel="True"
                                     RelativePanel.Below="OutputText" 
                                     Background="#FF33B1DF"
                                     Margin="5,5,5,5" Foreground="#FF2D9FC9"
                                     />
                        <Button x:ConnectionId='15' x:Name="LoadRepo"
                                        Content="Load Repo"
                                                              
                                         RelativePanel.AlignLeftWithPanel="True"
                                    RelativePanel.AlignRightWithPanel="True"
                                    VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                    Width="auto" Background="{x:Null}" BorderBrush="{x:Null}" Padding="8,75,8,4"/>
                        <Grid x:ConnectionId='16' x:Name="RepoGrid"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Width="auto"
                          RelativePanel.AlignLeftWithPanel="True"
                          RelativePanel.AlignRightWithPanel="True"
                              RelativePanel.Below="progressRepo" Background="#FF3C3C3D"
                          >

                            <RelativePanel x:ConnectionId='17' x:Name="RepoRelPanel" ScrollViewer.VerticalScrollMode="Enabled">

                                <Button x:ConnectionId='18' 
                                    x:Name="RepoHome"
                                    Content="Home"
                                                          
                                    HorizontalAlignment="Stretch"
                                    RelativePanel.AlignLeftWithPanel="True"
                                    RelativePanel.AlignRightWithPanel="True"
                                    RelativePanel.AlignTopWithPanel="True"
                                    Width="auto" Background="{x:Null}" BorderBrush="{x:Null}"
                                        />
                                <ScrollViewer RelativePanel.AlignLeftWithPanel="True"
                                              RelativePanel.AlignRightWithPanel="True"
                                              RelativePanel.AlignBottomWithPanel="True"
                                              
                                              RelativePanel.Below="RepoHome"
                                              >
                                    <StackPanel x:ConnectionId='32'
                                    x:Name="GamesStack"
                                    ScrollViewer.VerticalScrollMode="Enabled"
                                    
                                    HorizontalAlignment="Stretch"
                                    RelativePanel.AlignLeftWithPanel="True"
                                    RelativePanel.AlignRightWithPanel="True"
                                    RelativePanel.Below="RepoHome">


                                    </StackPanel>
                                </ScrollViewer>
                                <Button x:ConnectionId='19' x:Name="GamesButton"
                                    Content="Games"
                                                             
                                    HorizontalAlignment="Stretch"
                                    RelativePanel.AlignLeftWithPanel="True"
                                    RelativePanel.AlignRightWithPanel="True"
                                    Width="auto" Background="{x:Null}" BorderBrush="{x:Null}"
                                    />

                                <Button x:ConnectionId='20' x:Name="Appsbutton"
                                        Content="Applications"
                                                                
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="GamesButton"
                                        Width="auto" Background="{x:Null}" BorderBrush="{x:Null}"/>



                                <Button x:ConnectionId='21' x:Name="AudioVideo"
                                        Content="Audio/Video"
                                                                
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="RepoHome"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='22' x:Name="Browsers"
                                        Content="Browsers"
                                                              
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="AudioVideo"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='23' x:Name="Emulation"
                                        Content="Emulation"
                                                               
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="Browsers"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='24' x:Name="GApps"
                                        Content="Google Apps"
                                                           
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="Emulation"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='25' x:Name="Imaging"
                                        Content="Imaging"
                                                             
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="GApps"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='26' x:Name="Messaging"
                                        Content="Messaging"
                                                               
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="Imaging"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='27' x:Name="Misc"
                                        Content="Misc"
                                                          
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="Messaging"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='28' x:Name="Readers"
                                        Content="Readers"
                                                             
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="Misc"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='29' x:Name="SocialMedia"
                                        Content="Social Media"
                                                                 
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="Readers"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='30' x:Name="TextEdit"
                                        Content="Text Editors"
                                                              
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="SocialMedia"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>
                                <Button x:ConnectionId='31' x:Name="Tools"
                                        Content="Tools"
                                                           
                                        HorizontalAlignment="Stretch"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.Below="TextEdit"
                                        Width="auto" 
                                        Background="{x:Null}" 
                                        BorderBrush="{x:Null}"/>




                            </RelativePanel>
                        </Grid>
                    </RelativePanel>
                </PivotItem>
                <PivotItem Header="About">
                    <RelativePanel VerticalAlignment="Stretch" MinHeight="250">
                        <TextBlock x:ConnectionId='9' x:Name="AboutText"
                                   TextWrapping="Wrap"
                                   Margin="5,5,5,5"
                                   RelativePanel.AlignLeftWithPanel="True"
                                   RelativePanel.AlignRightWithPanel="True"
                                   />
                        <Button x:ConnectionId='10' x:Name="TelegramLink"
                                Content="ProjectA Telegram"
                                                          
                                RelativePanel.Below="AboutText"
                                RelativePanel.AlignLeftWithPanel="True"
                                RelativePanel.AlignRightWithPanel="True"
                                
                                Margin="5,5,5,5" 
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="#FF33B1DF" FontSize="16" />
                        <Button x:ConnectionId='11' x:Name="GithubAStorageLnk"
                                                               
                                Content="View Full Readme"
                                Margin="5,5,5,5"
                                FontSize="16"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Foreground="#FF33B1DF"
                                RelativePanel.Below="TelegramLink"
                                RelativePanel.AlignLeftWithPanel="True"/>
                        <Button x:ConnectionId='12' x:Name="ClearFirstRunData"
                            Content="Clear First Run Data"
                                                           
                            Margin="5,5,5,5"
                               Background="{x:Null}"
                BorderBrush="{x:Null}"
                Foreground="#FFE51400"
                                RelativePanel.Below="GithubAStorageLnk"
                                HorizontalAlignment="Stretch"
                                RelativePanel.AlignLeftWithPanel="True"
                                />
                    </RelativePanel>


                </PivotItem>
            </Pivot>
            <Frame x:ConnectionId='3' x:Name="ReadmeFrame" 
                   Visibility="Collapsed"
                   RelativePanel.AlignLeftWithPanel="True"
                   RelativePanel.AlignRightWithPanel="True"
                   RelativePanel.AlignTopWithPanel="True"
                   RelativePanel.AlignBottomWithPanel="True"
                   Margin="10,10,10,10" Background="#FF2D2D30">
                <RelativePanel>
                    <ScrollViewer x:ConnectionId='5' x:Name="ReadMeScroll" RelativePanel.Above="CloseReadme"
                                   RelativePanel.AlignLeftWithPanel="True"
                                   RelativePanel.AlignRightWithPanel="True"
                                   RelativePanel.AlignTopWithPanel="True">
                    <TextBlock x:ConnectionId='7' x:Name="ReadmeBox"
                                   RelativePanel.Above="CloseReadme"
                                   RelativePanel.AlignLeftWithPanel="True"
                                   RelativePanel.AlignRightWithPanel="True"
                                   RelativePanel.AlignTopWithPanel="True"
                                   Margin="5,5,5,5" FontSize="10"
                               TextWrapping="Wrap"
                               ScrollViewer.VerticalScrollMode="Enabled"
                                   />
                    </ScrollViewer>
                    <Button x:ConnectionId='6' x:Name="CloseReadme"
                        Content="Close"
                                                     
                        RelativePanel.AlignBottomWithPanel="True"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Foreground="#FF33B1DF" FontSize="20"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignRightWithPanel="True"
                            HorizontalAlignment="Stretch"/>
                </RelativePanel>

            </Frame>
            <Button x:ConnectionId='4' 
                x:Name="InstallPackageBtn"
                                               
                Content="Install"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                Width="auto"
                HorizontalAlignment="Stretch"
                Margin="5,5,5,5"
                BorderBrush="{x:Null}"
                Foreground="#FF33B1DF" FontSize="25" VerticalAlignment="Bottom">
                <Button.Background>
                    <SolidColorBrush Color="#FF303030" Opacity="0.5"/>
                </Button.Background>
            </Button>
        </RelativePanel>
    </Grid>

</Page>

